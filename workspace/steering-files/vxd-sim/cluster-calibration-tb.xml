<?xml version="1.0" encoding="us-ascii"?>

<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">
  
  <execute>
    <processor name="M26HitMaker"/>
    <processor name="VXDTracker"/>
    <processor name="ClusterCalibrator"/>
    <processor name="ClusterDQM"/>
  </execute>
    
  <global>
    <parameter name="LCIOInputFiles"> tmp.slcio </parameter>
    <parameter name="GearXMLFile" value="gear.xml"/>
    <parameter name="MaxRecordNumber" value="-1"/>
    <parameter name="SkipNEvents" value="0"/>
    <parameter name="SupressCheck" value="false"/>
    <parameter name="Verbosity" value="MESSAGE3"/>
  </global>
     
  <processor name="M26HitMaker" type="GoeHitMaker">
    <!--GoeHitMaker:  Compute hits from pixel clusters using a clusterDB-->
    <!--Name of cluster collection-->
    <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_m26 </parameter>
    <!--Name of hit collection-->
    <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> goehit_m26 </parameter>
    <!--This is the name of the ROOT file with the cluster constants (add .root)-->
    <parameter name="ClusterDBFileName" type="string" value="clusterDB-M26.root"/>
    <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
    <parameter name="MaxSizeU" type="int" value="3"/>
    <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
    <parameter name="MaxSizeV" type="int" value="3"/>
  </processor>
 
    <processor name="VXDTracker" type="FastTracker">
     <!--FastTracker: Performs track finding and fitting for beam tests-->
     <!--Input hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> goehit_m26 goehit_dep </parameter>
     <!--Collection name for fitted tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Enter plane numbers of bad detectors-->
     <parameter name="ExcludeDetector" type="IntVec" value=""/>
     <!--To use only GoodQuality write 0 here-->
     <parameter name="HitQualitySelection" type="int" value="0"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualU" type="FloatVec" value="0.3"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualV" type="FloatVec" value="0.3"/>
     <!--Maximum track chisq in track fit-->
     <parameter name="MaxTrackChi2" type="float" value="50"/>
     <!--Maximum number of consecutive missing hits in track-->
     <parameter name="MaximumGap" type="int" value="1"/>
     <!--Maximum slope of candiate tracks in Z=0 plane (rad). Set cut to zero to deactivate.-->
     <parameter name="MaximumSlope" type="float" value="0.1"/>
     <!--Minimum number of hits in track-->
     <parameter name="MinimumHits" type="int" value="6"/>
     <!--Chi2 cut for removal of bad hits-->
     <parameter name="OutlierChi2Cut" type="float" value="20"/>
     <!--Fitting iteration for removal of bad hits-->
     <parameter name="OutlierIterations" type="int" value="2"/>
     <!--Particle charge [e]-->
     <parameter name="ParticleCharge" type="double" value="-1"/>
     <!--Particle mass [GeV]-->
     <parameter name="ParticleMass" type="double" value="0.000511"/>
     <!--Particle momentum [GeV]-->
     <parameter name="ParticleMomentum" type="double" value="4.0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_FirstPlane" type="int" value="0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_SecondPlane" type="int" value="1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_FirstPlane" type="int" value="-1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_SecondPlane" type="int" value="-1"/>
   </processor>
    
   <processor name="ClusterCalibrator" type="GoeClusterCalibrator">
     <!--GoeClusterCalibrator: Create clusterDB for clusters using reco tracks-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Output clusterDB file name-->
     <parameter name="ClusterDBFileName" type="string" value="clusterDB-M26.root"/>
     <!--Ignore clusters from this list of sensorIDs-->
     <parameter name="IgnoreIDs" type="IntVec"> </parameter>
     <!--Minimum number of cluster ID occurances for clusterDB-->
     <parameter name="MinClusters" type="int" value="2000"/>
     <!--Minimum value of variance for u position measurement [mm^2]-->
     <parameter name="MinVarianceU" type="float" value="1e-06"/>
     <!--Minimum value of variance for v position measurement [mm^2]-->
     <parameter name="MinVarianceV" type="float" value="1.1e-06"/>
   </processor>
    
   <processor name="ClusterDQM" type="TrackFitDQM">
     <!--TrackFitDQM: DQM plots for monitor quality of track fitting-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="ClusterValidation.root"/>
   </processor>
   
</marlin>
