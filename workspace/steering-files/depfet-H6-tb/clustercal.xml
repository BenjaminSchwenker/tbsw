<?xml version="1.0" encoding="us-ascii"?>



<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">
   
   <execute>
      <processor name="RawInputProcessor"/>
      <processor name="M26Unpacker"/>
      <processor name="M26PixelClusterizer"/>
      <processor name="M26HitMaker"/>
      <processor name="DEPUnpacker"/>
      <processor name="DEPClusterizer"/>
      <processor name="DEPHitMaker"/>
      <processor name="DEPClusterizer_2"/>
      <processor name="DEPHitMaker_2"/>
      <processor name="RawDQM"/>
      <processor name="VXDTracker"/>
      <processor name="TelescopeDQM"/>
      <processor name="ClusterCalibrator"/>
   </execute>
   
   <global>
      <parameter name="LCIOInputFiles">  </parameter>
      <parameter name="GearXMLFile" value="cal-files/gear.xml"/>
      <parameter name="MaxRecordNumber" value="-1"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3"/>
   </global>
   
   <processor name="RawInputProcessor" type="EudaqInputProcessor">
     <!--Reads a EUDAQ .raw file event by event and stores raw data into lcio::LCEvents.
         Make sure to not specify any LCIOInputFiles.-->
     <!--Set name of the detector-->
     <parameter name="DetectorName" type="string" value="EUTelescope"/>
     <!--Input file-->
     <parameter name="FileName" type="string" value="inputfilename"/>
   </processor>

   <processor name="M26Unpacker" type="NIUnpacker">
     <!--NIUnpacker: Unpacker for M26 sensors in EUDET/AIDA telescope raw data-->
     <!--Name of collection containing raw data-->
     <parameter name="InputCollectionName" type="string" lcioInType="TrackerRawData"> NI </parameter>
     <!--Name of the output digit collection-->
     <parameter name="OutputCollectionName" type="string" lcioOutType="TrackerData"> zsdata_m26 </parameter>
   </processor>
    
   <processor name="M26PixelClusterizer" type="PixelClusterizer">
     <!--PixelClusterizer: Looking for clusters in zs pixel data-->
     <!--This is the name of the ROOT file with the status mask (add .root)-->
     <parameter name="NoiseDBFileName" type="string" value="cal-files/NoiseDB-M26.root"/>
     <!--Name of input sparsified pixel data collection-->
     <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_m26 </parameter>
     <!--Name of the output cluster collection-->
     <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_m26 </parameter>
     <!--0: common side; 1: common corner; 3: max. one missing pixel-->
     <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
     <!--Threshold for cluster signal-->
     <parameter name="SparseClusterCut" type="float" value="0"/>
     <!--Threshold for seed pixel signal-->
     <parameter name="SparseSeedCut" type="float" value="0"/>
     <!--Threshold for zero suppression-->
     <parameter name="SparseZSCut" type="float" value="0"/>
   </processor>
   
   <processor name="M26HitMaker" type="CogHitMaker">
     <!--CogHitMaker:  Compute hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_m26 </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_m26 </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.0037"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.0033"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.0050"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.0037"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.0033"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="0.0050"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="3"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="3"/>
   </processor>

   <processor name="DEPUnpacker" type="DEPFETHybrid6Unpacker">
     <!--DEPFETHybrid6Unpacker: Unpacker for DEPFET Hybrid6 detectors (large Belle2 PXD6 sensor) raw data-->
     <!--Name of collection containing raw data-->
     <parameter name="InputCollectionName" type="string" lcioInType="TrackerRawData"> DEPFET </parameter>
     <!--Name of the output digit collection-->
     <parameter name="OutputCollectionName" type="string" lcioOutType="TrackerData"> zsdata_dep </parameter>
   </processor>

  <processor name="DEPClusterizer" type="PixelClusterizer">
     <!--PixelClusterizer: Looking for clusters in zs pixel data-->
     <!--This is the name of the ROOT file with the status mask (add .root)-->
     <parameter name="NoiseDBFileName" type="string" value="cal-files/NoiseDB-DEP.root"/>
     <!--Name of input sparsified pixel data collection-->
     <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_dep </parameter>
     <!--Name of the output cluster collection-->
     <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_dep </parameter>
     <!--0: common side; 1: common corner; 3: max. one missing pixel-->
     <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
     <!--Threshold for cluster signal-->
     <parameter name="SparseClusterCut" type="float" value="5"/>
     <!--Threshold for seed pixel signal-->
     <parameter name="SparseSeedCut" type="float" value="5"/>
     <!--Threshold for zero suppression-->
     <parameter name="SparseZSCut" type="float" value="5"/>
   </processor>
   
   
   <processor name="DEPHitMaker" type="CogHitMaker">
     <!--CogHitMaker:  Compute  hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_dep </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_dep </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.0134"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.0077"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.010"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.027"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.010"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="0.010"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="6"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="6"/>
   </processor>

   <processor name="DEPClusterizer_2" type="PixelClusterizer">
     <!--PixelClusterizer: Looking for clusters in zs pixel data-->
     <!--This is the name of the ROOT file with the status mask (add .root)-->
     <parameter name="NoiseDBFileName" type="string" value="cal-files/NoiseDB-DEP_2.root"/>
     <!--Name of input sparsified pixel data collection-->
     <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_dep2 </parameter>
     <!--Name of the output cluster collection-->
     <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_dep2 </parameter>
     <!--0: common side; 1: common corner; 3: max. one missing pixel-->
     <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
     <!--Threshold for cluster signal-->
     <parameter name="SparseClusterCut" type="float" value="5"/>
     <!--Threshold for seed pixel signal-->
     <parameter name="SparseSeedCut" type="float" value="5"/>
     <!--Threshold for zero suppression-->
     <parameter name="SparseZSCut" type="float" value="5"/>
   </processor>

   <processor name="DEPHitMaker_2" type="CogHitMaker">
     <!--CogHitMaker:  Compute  hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_dep2 </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_dep2 </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.0134"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.0077"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.010"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.027"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.010"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="0.010"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="6"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="6"/>
   </processor>

    <processor name="RawDQM" type="RawHitDQM">
     <!--RawHitDQM: Producing DQM histos from hits-->
     <!--Hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="string" lcioInType="TrackerHit">  hit_dep2</parameter>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="RawDQM-DEP2.root"/>
   </processor>
    
    <processor name="VXDTracker" type="FastTracker">
     <!--FastTracker: Performs track finding and fitting for beam tests-->
     <!--Input hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> hit_m26 hit_dep2 </parameter>
     <!--Collection name for fitted tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> tracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Enter plane numbers of bad detectors-->
     <parameter name="ExcludeDetector" type="IntVec" value=""/>
     <!--To use only GoodQuality write 0 here-->
     <parameter name="HitQualitySelection" type="int" value="0"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualU" type="FloatVec" value="0.4"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualV" type="FloatVec" value="0.4"/>
     <!--Maximum track chisq in track fit-->
     <parameter name="MaxTrackChi2" type="float" value="100"/>
     <!--Maximum number of consecutive missing hits in track-->
     <parameter name="MaximumGap" type="int" value="0"/>
     <!--Maximum slope of candiate tracks in Z=0 plane (rad). Set cut to zero to deactivate.-->
     <parameter name="MaximumSlope" type="float" value="0.1"/>
     <!--Minimum number of hits in track-->
     <parameter name="MinimumHits" type="int" value="7"/>
     <!--Chi2 cut for removal of bad hits-->
     <parameter name="OutlierChi2Cut" type="float" value="40"/>
     <!--Fitting iteration for removal of bad hits-->
     <parameter name="OutlierIterations" type="int" value="2"/>
     <!--Particle charge [e]-->
     <parameter name="ParticleCharge" type="double" value="-1"/>
     <!--Particle mass [GeV]-->
     <parameter name="ParticleMass" type="double" value="0.000511"/>
     <!--Particle momentum [GeV]-->
     <parameter name="ParticleMomentum" type="double" value="4.0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_FirstPlane" type="int" value="0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_SecondPlane" type="int" value="1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_FirstPlane" type="int" value="-1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_SecondPlane" type="int" value="-1"/>
   </processor>

   <processor name="TelescopeDQM" type="TrackFitDQM">
     <!--TrackFitDQM: DQM plots for monitor quality of track fitting-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> tracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="ClusterCalDQM.root"/>
   </processor>
   
   <processor name="ClusterCalibrator" type="GoeClusterCalibrator">
     <!--GoeClusterCalibrator: Create clusterDB for clusters using reco tracks-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> tracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Output clusterDB file name-->
     <parameter name="ClusterDBFileName" type="string" value="clusterDB-DEP2.root"/>
     <!--Minimum number of cluster ID occurances for clusterDB-->
     <parameter name="MinClusters" type="int" value="500"/>
     <!--Minimum value of variance for u position measurement [mm^2]-->
     <parameter name="MinVarianceU" type="float" value="3e-06"/>
     <!--Minimum value of variance for v position measurement [mm^2]-->
     <parameter name="MinVarianceV" type="float" value="3e-06"/>
     <!--Ignore clusters from this list of sensorIDs-->
     <parameter name="FilterIDs" type="IntVec"> 0 1 2 3 4 5 </parameter>
   </processor>
   
</marlin>
