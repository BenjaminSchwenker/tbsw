<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="X0ImageSim"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> </parameter>
      <parameter name="GearXMLFile" value="gear-files/gear_x0.xml"/>
      <parameter name="MaxRecordNumber" value="-1"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3 "/>
   </global>

 <processor name="X0ImageSim" type="X0ImageSimulator">
 <!--Validation tool for material estimation-->
  <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
  <parameter name="AlignmentDBFileName" type="string" value="cal-files/dummy/eudet-alignmentDB.slcio"/>
  <!--Plane number of DUT along the beam line-->
  <parameter name="DUTPlane" type="int" value="3"/>
  <!--Hit detection efficiency of telescope detectors [%]-->
  <parameter name="DetectionEfficiency" type="double" value="100"/>
  <!--Beam correlation coefficient Y-->
  <parameter name="GunCorralationY" type="double" value="0.2"/>
  <!--Beam correlation coefficient X-->
  <parameter name="GunCorrelationX" type="double" value="0.2"/>
  <!--RMS track slope in XZ plane [rad]-->
  <parameter name="GunDivergenceX" type="double" value="0.0015"/>
  <!--RMS track slope in YZ plane [rad]-->
  <parameter name="GunDivergenceY" type="double" value="0.0015"/>
  <!--X position of particle gun [mm]-->
  <parameter name="GunPositionX" type="double" value="0"/>
  <!--Y position of particle gun [mm]-->
  <parameter name="GunPositionY" type="double" value="0"/>
  <!--Z position of particle gun [mm]-->
  <parameter name="GunPositionZ" type="double" value="-1000"/>
  <!--X rotation of particle gun [rad]-->
  <parameter name="GunRotationX" type="double" value="0"/>
  <!--Y rotation of particle gun [rad]-->
  <parameter name="GunRotationY" type="double" value="0"/>
  <!--Z rotation of particel gun [rad]-->
  <parameter name="GunRotationZ" type="double" value="0"/>
  <!--Smearing of X vertex position at beam collimator [mm]-->
  <parameter name="GunSpotSizeX" type="double" value="10"/>
  <!--Smearing of Y vertex position at beam collimator [mm]-->
  <parameter name="GunSpotSizeY" type="double" value="10"/>
  <!--Choose digitizer model for pixel detectors:
0: Digital Mimosa26 digitizer
1: Gaussian smearing digitizer
2: Box digitizer-->
  <parameter name="HitDigitizer" type="int" value="1"/>
  <!--Choose model for multiple scattering:
0: Highland
1: Moliere-->
  <parameter name="MSCModel" type="int" value="0"/>
  <!--Thickness of material before telescope [X/X0]-->
  <parameter name="MaterialBeforeTelescope" type="double" value="0"/>
  <!--How many tracks for simulation-->
  <parameter name="NumberOfTracks" type="int" value="750000"/>
  <!--Particle charge [e]-->
  <parameter name="ParticleCharge" type="double" value="-1"/>
  <!--Particle mass [GeV]-->
  <parameter name="ParticleMass" type="double" value="0.000511"/>
  <!--Particle momentum [GeV]-->
  <parameter name="ParticleMomentum" type="double" value="3"/>
  <!--Random Error on Particle momentum [GeV]-->
  <parameter name="ParticleMomentumError" type="double" value="0.1"/>
  <!--Output root file name-->
  <parameter name="RootFileName" type="string" value="X0Test.root"/>
  <!--Reconstruct track using true true particle momentum-->
  <parameter name="UseTrueEnergy" type="bool" value="false"/>
</processor>

</marlin>
