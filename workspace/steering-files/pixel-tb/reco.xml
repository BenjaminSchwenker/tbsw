<?xml version="1.0" encoding="us-ascii"?>



<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="LoadNoiseDB-DEP"/>
      <processor name="LoadNoiseDB-M26"/>
      <processor name="PixelClusterizer-DEP"/>
      <processor name="PixelClusterizer-M26"/>
      <processor name="M26HitMaker"/>
      <processor name="DEPHitMaker"/>
      <processor name="VXDTracker"/>
      <processor name="DUTAnalyzer"/>
      <processor name="MCAnalyzer"/>
      <processor name="ValidationDQM"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> tmp-rawdata.slcio </parameter>
      <parameter name="GearXMLFile" value="cal-files/gear.xml"/>
      <parameter name="MaxRecordNumber" value="-1"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3"/>
   </global>
   
    <processor name="LoadNoiseDB-M26" type="ConditionsProcessor">
     <!--Initialization of a simple conditions file handler-->
     <parameter name="SimpleFileHandler" type="StringVec"> status_m26 cal-files/NoiseDB-M26.slcio status_m26 </parameter>
   </processor>

    <processor name="LoadNoiseDB-DEP" type="ConditionsProcessor">
     <!--Initialization of a simple conditions file handler-->
     <parameter name="SimpleFileHandler" type="StringVec"> status_dep cal-files/NoiseDB-DEP.slcio status_dep </parameter>
   </processor>

     
 <processor name="PixelClusterizer-DEP" type="PixelClusterizer">
 <!--PixelClusterizer: Looking for clusters in zs pixel data-->
  <!--Name of input sparsified pixel data collection-->
  <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_dep </parameter>
  <!--Input status collection name-->
  <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_dep </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_dep </parameter>
  <!--0: common side; 1: common corner; 3: max. one missing pixel-->
  <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
  <!--Threshold for cluster signal-->
  <parameter name="SparseClusterCut" type="float" value="0"/>
  <!--Threshold for seed pixel signal-->
  <parameter name="SparseSeedCut" type="float" value="0"/>
  <!--Threshold for zero suppression-->
  <parameter name="SparseZSCut" type="float" value="0"/>
</processor>

 <processor name="PixelClusterizer-M26" type="PixelClusterizer">
 <!--PixelClusterizer: Looking for clusters in zs pixel data-->
  <!--Name of input sparsified pixel data collection-->
  <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_m26 </parameter>
  <!--Input status collection name-->
  <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_m26 </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_m26 </parameter>
  <!--0: common side; 1: common corner; 3: max. one missing pixel-->
  <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
  <!--Threshold for cluster signal-->
  <parameter name="SparseClusterCut" type="float" value="0"/>
  <!--Threshold for seed pixel signal-->
  <parameter name="SparseSeedCut" type="float" value="0"/>
  <!--Threshold for zero suppression-->
  <parameter name="SparseZSCut" type="float" value="0"/>
</processor>

<processor name="M26HitMaker" type="CogHitMaker">
     <!--CogHitMaker:  Compute hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_m26 </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_m26 </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.00375"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.00190"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.0070"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.00375"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.00190"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="0.0070"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="2"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="2"/>
   </processor>

 <processor name="DEPHitMaker" type="CogHitMaker">
     <!--CogHitMaker:  Compute  hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_dep </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_dep </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.00375"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.00190"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.0070"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.00375"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.00190"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="0.0070"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="2"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="2"/>
   </processor>

    <processor name="VXDTracker" type="FastTracker">
     <!--FastTracker: Performs track finding and fitting for beam tests-->
     <!--Input hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> hit_m26 </parameter>
     <!--Collection name for fitted tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Enter plane numbers of bad detectors-->
     <parameter name="ExcludeDetector" type="IntVec" value="3"/>
     <!--To use only GoodQuality write 0 here-->
     <parameter name="HitQualitySelection" type="int" value="0"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualU" type="FloatVec" value="0.1"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualV" type="FloatVec" value="0.1"/>
     <!--Maximum track chisq in track fit-->
     <parameter name="MaxTrackChi2" type="float" value="50"/>
     <!--Maximum number of consecutive missing hits in track-->
     <parameter name="MaximumGap" type="int" value="0"/>
     <!--Maximum slope of candiate tracks in Z=0 plane (rad). Set cut to zero to deactivate.-->
     <parameter name="MaximumSlope" type="float" value="0.1"/>
     <!--Minimum number of hits in track-->
     <parameter name="MinimumHits" type="int" value="6"/>
     <!--Chi2 cut for removal of bad hits-->
     <parameter name="OutlierChi2Cut" type="float" value="20"/>
     <!--Fitting iteration for removal of bad hits-->
     <parameter name="OutlierIterations" type="int" value="2"/>
     <!--Particle charge [e]-->
     <parameter name="ParticleCharge" type="double" value="-1"/>
     <!--Particle mass [GeV]-->
     <parameter name="ParticleMass" type="double" value="0.000511"/>
     <!--Particle momentum [GeV]-->
     <parameter name="ParticleMomentum" type="double" value="3.0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_FirstPlane" type="int" value="0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_SecondPlane" type="int" value="1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_FirstPlane" type="int" value="-1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_SecondPlane" type="int" value="-1"/>
   </processor>

  <processor name="DUTAnalyzer" type="DUTTreeProducer">
     <!--DUTTreeProducer: DUT Analysis Processor-->
     <!--Name of DUT hit collection-->
     <parameter name="HitCollection" type="string" lcioInType="TrackerHit"> hit_dep </parameter>
     <!--Name of DUT status collection-->
     <parameter name="StatusCollection" type="string" lcioInType="TrackerRawData"> status_dep </parameter>
     <!--Name of telescope track collection-->
     <parameter name="TrackCollection" type="string" lcioInType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Plane number of DUT along the beam line-->
     <parameter name="DUTPlane" type="int" value="3"/>
     <!--Maximum hit2track distance for hit matching [mm]-->
     <parameter name="HitDistMax" type="double" value="0.1"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="DUT-Histos.root"/>
     <!--Use only events with one track in telescope-->
     <parameter name="SingleTrackEvents" type="bool" value="false"/>
   </processor>

   <processor name="MCAnalyzer" type="MCTreeProducer">
     <!--MCTreeProducer: Matching SimtrackerHits to clusters and moving data into output TTree(s)-->
     <!--Name of hit collection-->
     <parameter name="HitCollection" type="string" lcioInType="TrackerHit"> hit_dep </parameter>
     <!--Name of collection with simulated hits-->
     <parameter name="SimTrackerHitCollection" type="string" lcioInType="SimTrackerHit"> SimTrackerHits </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Plane number of DUT along the beam line-->
     <parameter name="DUTPlane" type="int" value="3"/>
     <!--Maximum u residual for matching simHits to hits [mm]. Put -1 to deactivate cut.-->
     <parameter name="MaxResidualU" type="double" value="0.05"/>
     <!--Maximum v residual for matching simHits to hits [mm]. Put -1 to deactivate cut.-->
     <parameter name="MaxResidualV" type="double" value="0.05"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="MC-Histos.root"/>
   </processor>
   
   <processor name="ValidationDQM" type="TrackFitValidation">
     <!--Produces Validation plots (pulls) for track fitting algorithms-->
     <!--Name of collection with simulated hits-->
     <parameter name="SimTrackerHitCollection" type="string" lcioInType="SimTrackerHit"> SimTrackerHits </parameter>
     <!--Name of collection with reco tracks -->
     <parameter name="TrackCollection" type="string" lcioInType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Maximum u residual for matching simHits to hits [mm]. Put -1 to deactivate cut.-->
     <parameter name="MaxResidualU" type="double" value="0.05"/>
     <!--Maximum v residual for matching simHits to hits [mm]. Put -1 to deactivate cut.-->
     <parameter name="MaxResidualV" type="double" value="0.05"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="Validation.root"/>
   </processor>

  
</marlin>
