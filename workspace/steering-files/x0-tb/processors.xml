   </processor>
   
   <processor name="X0Imager" type="X0ImageProducer">
     <!--X0ImageProducer: X/X0 measurement for EUDET/AIDA telescope data-->
     <!--Name of upstream track collection-->
     <parameter name="UpStreamTrackCollection" type="string" lcioInType="Track" value="up_tracks"/>
     <!--Name of downstream track collection-->
     <parameter name="DownStreamTrackCollection" type="string" lcioInType="Track" value="down_tracks"/>
     <!--This is the name of the alignment constants file-->
     <parameter name="AlignmentDBFileName" type="string" value="localDB/alignmentDB.root"/>
     <!--Plane number of DUT along the beam line-->
     <parameter name="DUTPlane" type="int" value="3"/>
     <!--Choose upstream-downstream track matching approach. true: vertexfit, false: distance cut-->
     <parameter name="VertexFitSwitch" type="bool" value="false"/>
     <!--Flag (true/false) for simulating fractional Bethe Heitler energy loss (only used in toy simulation mode)-->
     <parameter name="ToyBetheHeitlerSwitch" type="bool" value="true" />
     <!--Switch to fast toy simulation mode: Replace reconstructed scatter angles from track fitting by angles sampled from a Gauss distribution-->
     <parameter name="ToyScatteringSwitch" type="bool" value="false"/>
     <!--Angle reconstruction error used in toy simulations, if its smaller than 0, use real angle reco error instead (only used in toy simulation mode)-->
     <parameter name="ToyRecoError" type="double" value="-1.0"/>
     <!--Maximal Chi2 value for vertex fit of matched up and downstream tracks, only used when VertexFitSwitch is true-->
     <parameter name="MaxVertexChi2" type="double" value="5.0"/>
     <!--Maximum distance between up and downstream tracks at dut plane [mm], only used when VertexFitSwitch is false-->
     <parameter name="MaxDist" type="double" value="0.50"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="X0.root"/>
   </processor>

   <processor name="M26ClusterCalibrationFromMC" type="GoeClusterCalibratorForMC">
    <!--GoeClusterCalibratorForMC: Create clusterDB for clusters using simhits-->
    <!--Name of hit collection-->
    <parameter name="HitCollection" type="string" lcioInType="TrackerHit" value="hit_m26"/>
    <!--Name of collection with simulated hits-->
    <parameter name="SimTrackerHitCollection" type="string" lcioInType="SimTrackerHit" value="SimTrackerHits"/>
    <!--Output clusterDB file name-->
    <parameter name="ClusterDBFileName" type="string" value="localDB/clusterDB-M26-MC.root"/>
    <!--Ignore clusters from list of sensorIDs-->
    <parameter name="IgnoreIDs" type="IntVec"> 11 </parameter>
    <!--Maximum u residual for matching simHits to hits [mm]. Put -1 to deactivate cut.-->
    <parameter name="MaxResidualU" type="double" value="0.1"/>
    <!--Maximum v residual for matching simHits to hits [mm]. Put -1 to deactivate cut.-->
    <parameter name="MaxResidualV" type="double" value="0.1"/>
    <!--Minimum number of cluster ID occurances for clusterDB-->
    <parameter name="MinClusters" type="int" value="500"/>
    <!--List of steps for software ADC. An empty list gives a constant transfer curve (0bit limit)-->
    <parameter name="SoftwareADC" type="IntVec" value=""/>
  </processor>
  
  <processor name="InfoSetter" type="EventInfoSetter">
    <!--Creates a lcio file with run header and empty events
         Make sure to not specify any LCIOInputFiles in the steering in order-->
    <!--Set name of the detector-->
    <parameter name="DetectorName" type="string" value="EUTelescope"/>
    <!--Set run number for lcio file-->
    <parameter name="RunNumber" type="int" value="0"/>
  </processor>
  
  <processor name="ParticleGun" type="ParticleGunGenerator">
    <!--Particle gun processor for simulation of a directed particle beam-->
    <!--Collection name for MCParticles-->
    <parameter name="MCParticleCollectionName" type="string" lcioOutType="MCParticle" value="MCParticles"/>
    <!--Number of beam particles per second-->
    <parameter name="BeamIntensity" type="double" value="60000"/>
    <!--Beam momentum [GeV]-->
    <parameter name="BeamMomentum" type="double" value="2.0"/>
    <!--Beam momentum sigma [GeV]-->
    <parameter name="BeamMomentumSigma" type="double" value="0.001"/>
    <!--Beam slope sigma in XZ plane [rad]-->
    <parameter name="BeamSlopeXSigma" type="double" value="0.0035"/>
    <!--Beam slope sigma in YZ plane [rad]-->
    <parameter name="BeamSlopeYSigma" type="double" value="0.0035"/>
    <!--A simulated event contains one particle at t=0 and extends for given time window in seconds-->
    <parameter name="BeamTimeWindow" type="double" value="0.0001"/>
    <!--Beam vertex position in X direction [mm]-->
    <parameter name="BeamVertexX" type="double" value="0"/>
    <!--Beam vertex sigma in X direction [mm]-->
    <parameter name="BeamVertexXSigma" type="double" value="20"/>
    <!--Beam vertex position in Y direction [mm]-->
    <parameter name="BeamVertexY" type="double" value="0"/>
    <!--Beam vertex sigma in Y direction [mm]-->
    <parameter name="BeamVertexYSigma" type="double" value="10"/>
    <!--Beam vertex position in Z direction [mm]-->
    <parameter name="BeamVertexZ" type="double" value="-10"/>
    <!--Beam correlation factor between vertex position and momentum-->
    <parameter name="CorrelationVertexXvsMomentum" type="double" value="0.005"/>
    <!--Beam correlation factor between vertex position and slope-->
    <parameter name="CorrelationVertexXvsSlopeX" type="double" value="0.1"/>
    <!--Beam correlation factor between vertex position and momentum-->
    <parameter name="CorrelationVertexYvsMomentum" type="double" value="0.005"/>
    <!--Beam correlation factor between vertex position and slope-->
    <parameter name="CorrelationVertexYvsSlopeY" type="double" value="0.1"/>
    <!--PDG code-->
    <parameter name="PDG" type="int" value="11"/>
    <!--Particle charge [e]-->
    <parameter name="ParticleCharge" type="double" value="-1"/>
    <!--Particle mass [GeV]-->
    <parameter name="ParticleMass" type="double" value="0.000511"/>
  </processor>
  
  <processor name="FastSim" type="FastSimulation">
    <!--Fast simulation processor for propagation of beam particels trough a test beam telescope-->
    <!--Collection name for MCParticles-->
    <parameter name="MCParticleCollectionName" type="string" lcioInType="MCParticle" value="MCParticles"/>
    <!--Collection name for SimTrackerHits-->
    <parameter name="SimTrackerHitCollectionName" type="string" lcioOutType="SimTrackerHit" value="SimTrackerHits"/>
    <!--This is the name of the alignment constants file-->
    <parameter name="AlignmentDBFileName" type="string" value="localDB/alignmentDB.root"/>
    <!--Choose model for multiple scattering: Highland(0)-->
    <parameter name="ScatterModel" type="int" value="0"/>
    <!--Flag (true/false) for simulating energy loss straggling-->
    <parameter name="DoEnergyLossStraggling" type="bool" value="false"/>
    <!--Flag (true/false) for simulating fractional Bethe Heitler energy loss-->
    <parameter name="DoFractionalBetheHeitlerEnergyLoss" type="bool" value="false"/>
  </processor>

  <processor name="M26Digitizer" type="SiPixDigitizer">
    <!--SiPixDigitizer: A rather generic silicon pixel detector digitizer-->
    <!--Collection name for SimTrackerHits-->
    <parameter name="SimTrackerHitCollectionName" type="string" lcioInType="SimTrackerHit" value="SimTrackerHits"/>
    <!--Collection name for Digits-->
    <parameter name="DigitCollectionName" type="string" lcioOutType="TrackerData" value="zsdata_m26"/>
    <!--Choose front-end electronics: ADC(0) or Comparator(1) or None(2) -->
    <parameter name="FrontEndType" type="int" value="1"/>
    <!--Set threshold for comparator (in e)-->
    <parameter name="ComparatorThrehold" type="float" value="1100"/>
    <!--Set how many bits the ADC uses-->
    <parameter name="ADCBits" type="int" value="8"/>
    <!--Set analog-to-digital converter range 0 - ? (in e)-->
    <parameter name="ADCRange" type="int" value="50000"/>
    <!--Back contact voltage wrt. source, in Volts-->
    <parameter name="BackPlaneVoltage" type="double" value="-30"/>
    <!--Split Signalpoints in smaller groups of N electrons (in e)-->
    <parameter name="ElectronGroupSize" type="double" value="100"/>
    <!--Time step for tracking electron groups in readout plane (in ns)-->
    <parameter name="ElectronStepTime" type="double" value="0.3"/>
    <!--Apply electronic effects?-->
    <parameter name="ElectronicEffects" type="bool" value="true"/>
    <!--Noise added by the electronics, set in ENC (one value for each detector)-->
    <parameter name="ElectronicNoise" type="double" value="300"/>
    <!--Apply digitization only to SimTrackerHits for sensors having DAQ IDs in this list-->
    <parameter name="FilterIDs" type="IntVec" value="0 1 2 3 4 5"/>
    <!--Use integration window?-->
    <parameter name="IntegrationWindow" type="bool" value="true"/>
    <!--Maximum distance between ionization points (in mm)-->
    <parameter name="MaxSegmentLength" type="double" value="0.005"/>
    <!--Set fraction of noise hits per sensor per readout frame-->
    <parameter name="NoiseFraction" type="float" value="0.00000"/>
    <!--Effective bulk doping concentration, in um^-3-->
    <parameter name="SiBulkDoping" type="double" value="10"/>
    <!--Only Simulated hits after the StartIntegration time in ns will be digitized-->
    <parameter name="StartIntegration" type="double" value="0"/>
    <!--Only Simulated hits before the StopIntegration time in ns will be digitized-->
    <parameter name="StopIntegration" type="double" value="100000"/>
    <!--Tangent of Lorentz angle-->
    <parameter name="TanLorentz" type="double" value="0"/>
    <!--Top contact voltage wrt. source, in Volts-->
    <parameter name="TopPlaneVoltage" type="double" value="-5"/>
    <!--Keep only hits >= threshold in ADC units-->
    <parameter name="ZSThreshold" type="float" value="0"/>
    <!--Border length along u side, in um-->
    <parameter name="uSideBorderLength" type="double" value="3"/>
    <!--Border length along v side, in um-->
    <parameter name="vSideBorderLength" type="double" value="3"/>
  </processor>
  
</marlin>
