<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="LoadNoiseDB-M26"/>
      <processor name="M26Clusterizer"/>
      <processor name="M26HitMaker"/>
      <processor name="TelTrackFinder"/>
      <processor name="DESYBeamCorrector"/>
      <processor name="TelescopeDQM"/>
      <processor name="X0Imager"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> tmp-rawdata.slcio </parameter>
      <parameter name="GearXMLFile" value="cal-files/gear.xml"/>
      <parameter name="MaxRecordNumber" value="-1"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3"/>
   </global>
   
   <processor name="LoadNoiseDB-M26" type="ConditionsProcessor">
     <!--ConditionsProcessor provides access to conditions data  transparently from LCIO files or a databases, using LCCD-->
     <!--Initialization of a conditions db file handler-->
     <!--parameter name="DBFileHandler" type="StringVec"> conditionsName conditions.slcio collectionName </parameter-->
     <!--Initialization of a data file handler-->
     <!--parameter name="DataFileHandler" type="StringVec" value="conditionsName"/-->
     <!--Initialization of a simple conditions file handler-->
     <parameter name="SimpleFileHandler" type="StringVec"> status_m26 cal-files/NoiseDB-M26.slcio status_m26 </parameter>
   </processor>
     
   <processor name="M26Clusterizer" type="PixelClusterizer">
     <!--PixelClusterizer: Looking for clusters in zs pixel data-->
     <!--Name of input sparsified pixel data collection-->
     <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_m26 </parameter>
     <!--Input status collection name-->
     <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_m26 </parameter>
     <!--Name of the output cluster collection-->
     <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_m26 </parameter>
     <!--0: common side; 1: common corner; 3: max. one missing pixel-->
     <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
     <!--Threshold for cluster signal-->
     <parameter name="SparseClusterCut" type="float" value="0"/>
     <!--Threshold for seed pixel signal-->
     <parameter name="SparseSeedCut" type="float" value="0"/>
     <!--Threshold for zero suppression-->
     <parameter name="SparseZSCut" type="float" value="0"/>
   </processor>
   
   <processor name="M26HitMaker" type="DigitalHitMaker">
     <!--DigitalHitMaker:  Compute digital hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_m26 </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_m26 </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.00430"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.00360"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.00430"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.00360"/>
   </processor>
   
   <processor name="TelTrackFinder" type="FastTracker">
     <!--FastTracker: Performs track finding and fitting for beam tests-->
     <!--Input hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> hit_m26 </parameter>
     <!--Collection name for fitted tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> tracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Enter plane numbers of bad detectors-->
     <parameter name="ExcludeDetector" type="IntVec" value="3"/>
     <!--To use only GoodQuality write 0 here-->
     <parameter name="HitQualitySelection" type="int" value="0"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidual" type="float" value="0.2"/>
     <!--Maximum track chisq in track fit-->
     <parameter name="MaxTrackChi2" type="float" value="50"/>
     <!--Maximum number of consecutive missing hits in track-->
     <parameter name="MaximumGap" type="int" value="0"/>
     <!--Maximum slope of candiate tracks in Z=0 plane (rad). Set cut to zero to deactivate.-->
     <parameter name="MaximumSlope" type="float" value="0.1"/>
     <!--Minimum number of hits in track-->
     <parameter name="MinimumHits" type="int" value="6"/>
     <!--Chi2 cut for removal of bad hits-->
     <parameter name="OutlierChi2Cut" type="float" value="15"/>
     <!--Fitting iteration for removal of bad hits-->
     <parameter name="OutlierIterations" type="int" value="2"/>
     <!--Particle charge [e]-->
     <parameter name="ParticleCharge" type="double" value="-1"/>
     <!--Particle mass [GeV]-->
     <parameter name="ParticleMass" type="double" value="0.000551"/>
     <!--Particle momentum [GeV]-->
     <parameter name="ParticleMomentum" type="double" value="3.0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_FirstPlane" type="int" value="0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_SecondPlane" type="int" value="1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_FirstPlane" type="int" value="-1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_SecondPlane" type="int" value="-1"/>
   </processor>

   <processor name="DESYBeamCorrector" type="BeamEnergyCorrector">
     <!--BeamEnergyCorrector: Applies corrections to the beam energy profile-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> tracks </parameter>
     <!--Collection name for corrected tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> tracks2 </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Momentum at centre of reference plane [GeV]-->
     <parameter name="CentralMomentum" type="double" value="3.16"/>
     <!--Plane number along the beam line-->
     <parameter name="ReferencePlane" type="int" value="3"/>
     <!--Momentum slope along u [GeV/mm]-->
     <parameter name="SlopeUMomentum" type="double" value="-0.006"/>
     <!--Momentum slope along v [GeV/mm]-->
     <parameter name="SlopeVMomentum" type="double" value="0"/>
   </processor>
   
   <processor name="TelescopeDQM" type="TrackFitDQM">
     <!--TrackFitDQM: DQM plots for monitor quality of track fitting-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> tracks2 </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="Histos.root"/>
   </processor>
   
   <processor name="X0Imager" type="X0ImageProducer">
     <!--X0ImageProducer: X/X0 measurement for EUDET/AIDA telescope data-->
     <!--Name of track collection-->
     <parameter name="TrackCollection" type="string" lcioInType="Track"> tracks2 </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="cal-files/eudet-alignmentDB.slcio"/>
     <!--Plane number of DUT along the beam line-->
     <parameter name="DUTPlane" type="int" value="3"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="X0.root"/>
   </processor>

</marlin>
