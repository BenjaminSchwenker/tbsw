<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="LoadNoiseDB-M26"/>
      <processor name="LoadNoiseDB-Strip"/>
      <processor name="M26Unpacker"/>
      <processor name="M26Clusterizer"/>
      <processor name="M26HitMaker"/>
      <processor name="StripUnpacker"/>
      <processor name="StripClusterizer"/>
      <processor name="StripHitMaker"/>
      <processor name="TelCorrelator"/>
      <processor name="LCIOOutput"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> tmp-rawdata.slcio </parameter>
      <parameter name="GearXMLFile" value="gear.xml"/>
      <parameter name="MaxRecordNumber" value="200000"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3"/>
   </global>
    
   <processor name="LoadNoiseDB-M26" type="ConditionsProcessor">
     <!--Initialization of a simple conditions file handler-->
     <parameter name="SimpleFileHandler" type="StringVec"> status_m26 NoiseDB-M26.slcio status_m26 </parameter>
   </processor>
 
   <processor name="LoadNoiseDB-Strip" type="ConditionsProcessor">
     <!--Initialization of a simple conditions file handler-->
     <parameter name="SimpleFileHandler" type="StringVec"> status_strip NoiseDB-Strip.slcio status_strip </parameter>
   </processor>

   <processor name="M26Unpacker" type="TelUnpacker">
 <!--TelUnpacker: Reformat telescope cluster data to raw data-->
  <!--Name of collection containing telescope data-->
  <parameter name="InputCollectionName" type="string" lcioInType="TrackerData"> original_zsdata </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerData"> zsdata_m26 </parameter>
  <!--Unpack digits from detectors having DAQ IDs in this list-->
  <parameter name="FilterIDs" type="IntVec" value="0 1 2 3 4 5"/>
  <!--How many floats are used to encode a digit-->
  <parameter name="Modulus" type="int" value="4"/>
 </processor>
   
   <processor name="M26Clusterizer" type="PixelClusterizer">
     <!--PixelClusterizer: Looking for clusters in zs pixel data-->
     <!--Name of input sparsified pixel data collection-->
     <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_m26 </parameter>
     <!--Input status collection name-->
     <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_m26 </parameter>
     <!--Name of the output cluster collection-->
     <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_m26 </parameter>
     <!--0: common side; 1: common corner; 3: max. one missing pixel-->
     <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
     <!--Threshold for cluster signal-->
     <parameter name="SparseClusterCut" type="float" value="0"/>
     <!--Threshold for seed pixel signal-->
     <parameter name="SparseSeedCut" type="float" value="0"/>
     <!--Threshold for zero suppression-->
     <parameter name="SparseZSCut" type="float" value="0"/>
   </processor>
   
   <processor name="M26HitMaker" type="DigitalHitMaker">
     <!--DigitalHitMaker:  Compute digital hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_m26 </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_m26 </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.00440"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.0047"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.0055"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="0.00440"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="0.0047"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="0.0055"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="3"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="3"/>
   </processor>

    <processor name="StripUnpacker" type="TelUnpacker">
 <!--TelUnpacker: Reformat telescope cluster data to raw data-->
  <!--Name of collection containing telescope data-->
  <parameter name="InputCollectionName" type="string" lcioInType="TrackerData"> original_zsdata </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerData"> zsdata_strip </parameter>
  <!--Unpack digits from detectors having DAQ IDs in this list-->
  <parameter name="FilterIDs" type="IntVec" value="6 7"/>
  <!--How many floats are used to encode a digit-->
  <parameter name="Modulus" type="int" value="4"/>
 </processor>

    <processor name="StripClusterizer" type="PixelClusterizer">
     <!--PixelClusterizer: Looking for clusters in zs pixel data-->
     <!--Name of input sparsified pixel data collection-->
     <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> zsdata_strip </parameter>
     <!--Input status collection name-->
     <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_strip </parameter>
     <!--Name of the output cluster collection-->
     <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_strip </parameter>
     <!--0: common side; 1: common corner; 3: max. one missing pixel-->
     <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
     <!--Threshold for cluster signal-->
     <parameter name="SparseClusterCut" type="float" value="30"/>
     <!--Threshold for seed pixel signal-->
     <parameter name="SparseSeedCut" type="float" value="30"/>
     <!--Threshold for zero suppression-->
     <parameter name="SparseZSCut" type="float" value="30"/>
   </processor>
    
   <processor name="StripHitMaker" type="CogHitMaker">
     <!--CogHitMaker:  Compute center of gravity hits from pixel clusters -->
     <!--Name of cluster collection-->
     <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_strip </parameter>
     <!--Name of hit collection-->
     <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_strip </parameter>
     <!--SigmaU for cluster with one uCell contributing [mm]-->
     <parameter name="SigmaU1" type="double" value="0.020"/>
     <!--SigmaU for cluster with two uCells contributing [mm]-->
     <parameter name="SigmaU2" type="double" value="0.016"/>
     <!--SigmaU for cluster with three or more uCells contributing [mm]-->
     <parameter name="SigmaU3" type="double" value="0.100"/>
     <!--SigmaV for cluster with one vCell contributing [mm]-->
     <parameter name="SigmaV1" type="double" value="2.3"/>
     <!--SigmaV for cluster with two vCells contributing [mm]-->
     <parameter name="SigmaV2" type="double" value="2.3"/>
     <!--SigmaV for cluster with three or more vCells contributing [mm]-->
     <parameter name="SigmaV3" type="double" value="2.3"/>
     <!--Clusters having more u cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeU" type="int" value="3"/>
     <!--Clusters having more v cells marked as bad [and can be filterd in track finder]-->
     <parameter name="MaxSizeV" type="int" value="3"/>
   </processor>  

   <processor name="TelCorrelator" type="Correlator">
     <!--Correlator: Pre- alignment in xy of tracking telescopes-->
     <!--Hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> hit_m26 hit_strip </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--This is the name of the output root file-->
     <parameter name="OutputRootFileName" type="string" value="XCorrelator.root"/>
     <!--Reference sensor plane number, counted along beam line-->
     <parameter name="ReferencePlane" type="int" value="0"/>
     <!--Particle charge [e]-->
     <parameter name="ParticleCharge" type="double" value="-1"/>
     <!--Particle mass [GeV]-->
     <parameter name="ParticleMass" type="double" value="0.000511"/>
     <!--Particle momentum [GeV]-->
     <parameter name="ParticleMomentum" type="double" value="4.6"/>
     <!--Update alignment DB using offset corrections (true/false)?-->
     <parameter name="UpdateAlignment" type="bool" value="true"/>
   </processor>
   
   <processor name="LCIOOutput" type="LCIOOutputProcessor">
     <!--Writes the current event to the specified LCIO outputfile. Needs to be the last ActiveProcessor.-->
     <!-- name of output file -->
     <parameter name="LCIOOutputFile" type="string" value="tmp.slcio "/>
     <!--write mode for output file:  WRITE_APPEND or WRITE_NEW-->
     <parameter name="LCIOWriteMode" type="string" value="None"/>
     <!--will split output file if size in kB exceeds given value - doesn't work with APPEND and NEW-->
     <!--parameter name="SplitFileSizekB" type="int" value="1992294"/-->
   </processor>
   
</marlin>
