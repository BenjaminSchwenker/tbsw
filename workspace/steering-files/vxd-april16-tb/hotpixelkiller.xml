<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="HotPixelKiller"/>
      <processor name="HotPixelKillerForHits"/>
   </execute>
   
   <global>
      <parameter name="LCIOInputFiles"> rawdata.slcio </parameter>
      <parameter name="GearXMLFile" value="geometry.xml"/>
      <parameter name="MaxRecordNumber" value="maxeventvalue"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3"/>
   </global>
   
   <processor name="HotPixelKiller" type="DEPFETHotPixelKiller">
     <!--DEPFETHotPixelKiller: Hot pixel killer tool-->
     <!--Name of zero suppressed data collection-->
     <parameter name="InputCollectionName" type="string" lcioInType="TrackerData"> PXDDigits </parameter>
     <!--Maximum occupancy for good pixels-->
     <parameter name="MaxOccupancy" type="float" value="0.01"/>
     <!--This is the name of the noise (hotpixel) data base-->
     <parameter name="NoiseDBFileName" type="string" value="NoiseDB-DEP.slcio"/>
     <!--Offline zero suppression threshold-->
     <parameter name="OfflineZSThreshold" type="float" value="5"/>
     <!--This is the name of the output root file-->
     <parameter name="OutputRootFileName" type="string" value="NoiseDB-DEP.root"/>
   </processor>
   
   <processor name="HotPixelKillerForHits" type="DEPFETHotPixelKillerForHits">
     <!--DEPFETHotPixelKillerForHits: Masking of hot pixels-->
     <!--Hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> PXDhits Telhits SVDhits </parameter>
     <!--Maximum occupancy for good pixels-->
     <parameter name="MaxOccupancy" type="float" value="0.0003"/>
     <!--This is the name of the noise (hotpixel) data base-->
     <parameter name="NoiseDBFileName" type="string" value="NoiseDB.slcio"/>
     <!--This is the name of the output root file-->
     <parameter name="OutputRootFileName" type="string" value="NoiseDB.root"/>
   </processor>

</marlin>
