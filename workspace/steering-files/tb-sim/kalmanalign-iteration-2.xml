<?xml version="1.0" encoding="us-ascii"?>

<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="TelTrackFinder"/>
      <processor name="DESYBeamCorrector"/>
      <processor name="TelAligner"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> tmp.slcio </parameter>
      <parameter name="GearXMLFile" value="gear.xml"/>
      <parameter name="MaxRecordNumber" value="-1"/>
      <parameter name="SkipNEvents" value="0"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE3 "/>
   </global>

   <processor name="TelTrackFinder" type="FastTracker">
     <!--FastTracker: Performs track finding and fitting for beam tests-->
     <!--Input hit collection names-->
     <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> hit_m26 hit_dep </parameter>
     <!--Collection name for fitted tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> aligntracks </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Enter plane numbers of bad detectors-->
     <parameter name="ExcludeDetector" type="IntVec" value=""/>
     <!--To use only GoodQuality write 0 here-->
     <parameter name="HitQualitySelection" type="int" value="0"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualU" type="FloatVec" value="0.2"/>
     <!--Maximum hit residual [mm]-->
     <parameter name="MaxResidualV" type="FloatVec" value="0.2"/>
     <!--Maximum track chisq in track fit-->
     <parameter name="MaxTrackChi2" type="float" value="40"/>
     <!--Maximum number of consecutive missing hits in track-->
     <parameter name="MaximumGap" type="int" value="0"/>
     <!--Maximum slope of candiate tracks in Z=0 plane (rad). Set cut to zero to deactivate.-->
     <parameter name="MaximumSlope" type="float" value="0.1"/>
     <!--Minimum number of hits in track-->
     <parameter name="MinimumHits" type="int" value="7"/>
     <!--Chi2 cut for removal of bad hits-->
     <parameter name="OutlierChi2Cut" type="float" value="20"/>
     <!--Fitting iteration for removal of bad hits-->
     <parameter name="OutlierIterations" type="int" value="2"/>
     <!--Particle charge [e]-->
     <parameter name="ParticleCharge" type="double" value="-1"/>
     <!--Particle mass [GeV]-->
     <parameter name="ParticleMass" type="double" value="0.000511"/>
     <!--Particle momentum [GeV]-->
     <parameter name="ParticleMomentum" type="double" value="3.0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_FirstPlane" type="int" value="0"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassOne_SecondPlane" type="int" value="1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_FirstPlane" type="int" value="-1"/>
     <!--Build track seeds from first plane and second plane-->
     <parameter name="PassTwo_SecondPlane" type="int" value="-1"/>
     <!--Output root file name-->
     <parameter name="RootFileName" type="string" value="AlignTracks-it2.root"/>
   </processor>
   
   <processor name="DESYBeamCorrector" type="BeamEnergyCorrector">
     <!--BeamEnergyCorrector: Applies corrections to the beam energy profile-->
     <!--Track input collection-->
     <parameter name="InputTrackCollectionName" type="string" lcioInType="Track"> aligntracks </parameter>
     <!--Collection name for corrected tracks-->
     <parameter name="OutputTrackCollectionName" type="string" lcioOutType="Track"> aligntracks2 </parameter>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Momentum at centre of reference plane [GeV]-->
     <parameter name="CentralMomentum" type="double" value="3"/>
     <!--Plane number along the beam line-->
     <parameter name="ReferencePlane" type="int" value="3"/>
     <!--Momentum slope along u [GeV/mm]-->
     <parameter name="SlopeUMomentum" type="double" value="0"/>
     <!--Momentum slope along v [GeV/mm]-->
     <parameter name="SlopeVMomentum" type="double" value="0"/>
   </processor>

   <processor name="TelAligner" type="KalmanAligner">
     <!--KalmanAligner: Tracking telescope alignment using the Kalman Alignment Algorithm (KAA) with annealing-->
     <!--Track collection for alignment-->
     <parameter name="TrackCollectionName" type="string" lcioInType="Track"> aligntracks2 </parameter>
     <!--Name of the alignment config file-->
     <parameter name="AlignConfigFileName" type="string" value="align-config-iteration-2.cfg"/>
     <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
     <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
     <!--Root file containing alignment validation plots-->
     <parameter name="RootFileName" type="string" value="KalmanAlign-final.root"/>
     <!--Update lcio alignmentDB using alignment results (true/false)?-->
     <parameter name="UpdateAlignment" type="bool" value="true"/>
   </processor>

</marlin>
