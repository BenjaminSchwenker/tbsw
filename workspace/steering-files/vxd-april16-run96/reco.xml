     <parameter name="AlignmentDBFileName" type="string" value="cal-files/dummy/eudet-alignmentDB.slcio"/>
     <!--Enter plane numbers of bad detectors-->
     <parameter name="ExcludeDetector" type="IntVec">  </parameter>
