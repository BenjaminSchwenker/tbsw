 <processor name="PixelClusterizer-DEP" type="PixelClusterizer">
 <!--PixelClusterizer: Looking for clusters in zs pixel data-->
  <!--Name of input sparsified pixel data collection-->
  <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> PXDDigits </parameter>
  <!--Input status collection name-->
  <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_dep </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_dep </parameter>
  <!--0: common side; 1: common corner; 3: max. one missing pixel-->
  <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
  <!--Threshold for cluster signal-->
  <parameter name="SparseClusterCut" type="float" value="7"/>
  <!--Threshold for seed pixel signal-->
  <parameter name="SparseSeedCut" type="float" value="5"/>
  <!--Threshold for zero suppression-->
  <parameter name="SparseZSCut" type="float" value="0"/>
</processor>

 <processor name="PixelClusterizer-M26" type="PixelClusterizer">
 <!--PixelClusterizer: Looking for clusters in zs pixel data-->
  <!--Name of input sparsified pixel data collection-->
  <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> TelDigits </parameter>
  <!--Input status collection name-->
  <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_m26 </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_m26 </parameter>
  <!--0: common side; 1: common corner; 3: max. one missing pixel-->
  <parameter name="AcceptDiagonalCluster" type="int" value="1"/>
  <!--Threshold for cluster signal-->
  <parameter name="SparseClusterCut" type="float" value="0"/>
  <!--Threshold for seed pixel signal-->
  <parameter name="SparseSeedCut" type="float" value="0"/>
  <!--Threshold for zero suppression-->
  <parameter name="SparseZSCut" type="float" value="0"/>
</processor>

 <processor name="StripClusterizer-SVD" type="StripClusterizer">
  <!--StripClusterizer: Looking for clusters in strip digits-->
  <!--Name of input sparsified strip digit collection-->
  <parameter name="SparseDataCollectionName" type="string" lcioInType="TrackerData"> SVDDigits </parameter>
  <!--Input status collection name-->
  <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status_svd </parameter>
  <!--Name of the output cluster collection-->
  <parameter name="ClusterCollectionName" type="string" lcioOutType="TrackerPulse"> zscluster_svd </parameter>
  <!--Accepts clusters with N missing strips-->
  <parameter name="AcceptGaps" type="int" value="1"/>
  <!--Threshold for cluster signal-->
  <parameter name="SparseClusterCut" type="float" value="0"/>
  <!--Threshold for seed digits-->
  <parameter name="SparseSeedCut" type="float" value="0"/>
  <!--Threshold for zero suppression-->
  <parameter name="SparseZSCut" type="float" value="0"/>
  <!--If true, cluster u strips. Else, cluster v strips-->
  <parameter name="uSide" type="bool" value="true"/>
</processor>

 <processor name="CogHitMaker-DEP" type="CogHitMaker">
 <!--CogHitMaker:  Compute center of gravity hits from pixel clusters -->
  <!--Name of cluster collection-->
  <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_dep </parameter>
  <!--Name of hit collection-->
  <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_dep </parameter>
  <!--To use only kGoodQuality write 0 here-->
  <parameter name="ClusterQualitySelection" type="int" value="0"/>
</processor>

 <processor name="CogHitMaker-M26" type="CogHitMaker">
 <!--CogHitMaker:  Compute center of gravity hits from pixel clusters -->
  <!--Name of cluster collection-->
  <parameter name="ClusterCollection" type="string" lcioInType="TrackerPulse"> zscluster_m26 </parameter>
  <!--Name of hit collection-->
  <parameter name="HitCollectionName" type="string" lcioOutType="TrackerHit"> hit_m26 </parameter>
  <!--To use only kGoodQuality write 0 here-->
  <parameter name="ClusterQualitySelection" type="int" value="0"/>
</processor>

 <processor name="HotPixelMasker" type="DEPFETHotPixelMasker">
 <!--DEPFETHotPixelMasker: Remove hits from hot pixels-->
  <!--Hit collection names-->
  <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> Telhits PXDhits SVDhits </parameter>
  <!--Input status collection name-->
  <parameter name="StatusCollectionName" type="string" lcioInType="TrackerRawData"> status </parameter>
</processor>

 <processor name="VXDCorrelator" type="Correlator">
 <!--Correlator: Pre- alignment in xy of tracking telescopes-->
  <!--Hit collection names-->
  <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> hit_dep SVDhits2 hit_m26 </parameter>
  <!--This is the name of the LCIO file with the alignment constants (add .slcio)-->
  <parameter name="AlignmentDBFileName" type="string" value="eudet-alignmentDB.slcio"/>
  <!--This is the name of the output root file-->
  <parameter name="OutputRootFileName" type="string" value="XCorrelator.root"/>
  <!--Particle charge [e]-->
  <parameter name="ParticleCharge" type="double" value="-1"/>
  <!--Particle mass [GeV]-->
  <parameter name="ParticleMass" type="double" value="0.000511"/>
  <!--Particle momentum [GeV]-->
  <parameter name="ParticleMomentum" type="double" value="5.0"/>
  <!--Reference sensor plane number, counted along beam line-->
  <parameter name="ReferencePlane" type="int" value="0"/>
  <!--Update alignment DB using offset corrections (true/false)?-->
  <parameter name="UpdateAlignment" type="bool" value="true"/>
</processor>

  <processor name="RawHitDQM" type="RawHitDQM">
 <!--RawHitDQM: Producing DQM histos from hits-->
  <!--Hit collection names-->
  <parameter name="InputHitCollectionNameVec" type="StringVec" lcioInType="TrackerHit"> SVDhits hit_dep hit_m26 </parameter>
  <!--Output root file name-->
  <parameter name="RootFileName" type="string" value="HitDQM.root"/>
</processor>


